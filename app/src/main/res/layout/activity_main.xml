<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="지출"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="수입"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="원"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                style="?android:attr/buttonBarStyle"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:textColor="#000000"
                    android:text="1" />

                <Button
                    android:id="@+id/btn2"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:textColor="#000000"
                    android:text="2" />

                <Button
                    android:id="@+id/btn3"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:textColor="#000000"
                    android:text="3" />

            </TableRow>

            <TableRow
                style="?android:attr/buttonBarStyle"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn4"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:textColor="#000000"
                    android:text="4" />

                <Button
                    android:id="@+id/btn5"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:textColor="#000000"
                    android:text="5" />

                <Button
                    android:id="@+id/btn6"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:textColor="#000000"
                    android:text="6" />

            </TableRow>

            <TableRow
                style="?android:attr/buttonBarStyle"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn7"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:textColor="#000000"
                    android:text="7" />

                <Button
                    android:id="@+id/btn8"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:textColor="#000000"
                    android:text="8" />

                <Button
                    android:id="@+id/btn9"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:textColor="#000000"
                    android:text="9" />

            </TableRow>

            <TableRow
                style="?android:attr/buttonBarStyle"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_b"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:textColor="#000000"
                    android:text="←" />

                <Button
                    android:id="@+id/btn0"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:textColor="#000000"
                    android:text="0" />

                <Button
                    android:id="@+id/btn_n"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:textColor="#000000"
                    android:text="●" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</FrameLayout>